void main(in PSInput In, out PSOutput Out)
{
    float3 emission_color = float3(1, 0.3, 0.0);
    float4 c = Color * g_BaseColor.Sample(g_BaseColor_sampler, In.UV) +  float4((1 - g_Mask.Sample(g_Mask_sampler, In.UV).xxx) * emission_color, 1.0);

    if (c.a < 0.1f)
    {
	    clip(-1);
        return;
    }

    Out.BaseColor = c;
}
